<h1>Division</h1>

<dl>
  <dt>First number</dt>
  <dd><%= @first_num %></dd>

  <dt>Second number</dt>
  <dd><%= @second_num %></dd>

  <dt>Result</dt>
  <dd>
   <% if @second_num == 0 %>
    Division by zero is not allowed.
  <% else %>
  <%= @div = @first_num / @second_num %>
  <%= @div %>
  <% end %>
  </dd>
</dl>
<a href="/divide">Do another division</a>
